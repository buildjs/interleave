#!/usr/bin/env node

var interleave = require('../lib/interleave'),
	fs = require('fs'),
	path = require('path'),
	program = require('commander');
	
function progInit() {
	program.usage('[options] target1.js [target2.js] ..');
	program.option('-p, --path [path]', 'Target output path (default to current directory)');
	program.option('-f, --file [file]', 'Target output file (default to build.js)');
	program.option('-c, --combiner [concat|none]', 'How to combine the various sources files (if multiple are provided)');
	program.parse(process.argv);
	
	interleave(program);
} // progInit
	
fs.readFile(path.join(__dirname, '../package.json'), 'utf8', function(err, contents) {
	if (! err) {
		var packageData = JSON.parse(contents);
		
		program.version(packageData.version);
	} // if

	progInit();
});